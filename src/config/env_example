# .env.example
#
# This is an example of the environment variables file.
# Copy this to a new file named .env and fill in your specific details.
# The .env file should NOT be committed to version control.

# --- Application Settings ---
# Set to 'true' for development, 'false' for production
DEBUG_MODE=true
APP_NAME="PHP Multi-User Blog"
APP_URL="http://localhost/php-multi-user-blog"

# --- Database Credentials ---
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=php_blog_db
DB_USER=your_db_user
DB_PASS=your_db_password
DB_CHARSET=utf8mb4

# --- Email (SMTP) Configuration ---
# For development, you can use a service like Mailtrap.io
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_password
SMTP_FROM_EMAIL=no-reply@yourdomain.com
SMTP_FROM_NAME="My PHP Blog"
